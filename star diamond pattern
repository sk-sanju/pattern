#include<stdio.h>
int main(){
    int i,j,k,n=7,b=1,a=(n-1)/2+1;
    for(i=1;i<=n;i++){
        for(k=1;k<=a;k++){
            printf(" ");
        }
        for(j=1;j<=b;j++){
            printf("* ");
        }
            if(i>=(n-1)/2+1){
                b--;
                a++;
            }
            else{
                b++;
                a--;
            }
            printf("\n");
    }
    return 0;
}
